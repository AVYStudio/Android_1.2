<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalcButton">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:backgroundTint">@color/custom_black</item>
        <item name="android:textColor">@color/button_light_white</item>
    </style>

    <style name="CalcOperationsButtonStyle" parent="CalcButton">
        <item name="android:textColor">@color/calc_operations_text_color</item>
    </style>

    <style name="CalcButton.OtherCalcButton">
        <item name="android:backgroundTint">@color/light_white</item>
        <item name="android:textColor">@color/custom_black</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:background">@color/light_white</item>
        <item name="android:gravity">end|bottom</item>
        <item name="android:textColor">@color/custom_black</item>
        <item name="android:layout_marginStart">@dimen/custom_margin</item>
        <item name="android:layout_marginEnd">@dimen/custom_margin</item>
    </style>
</resources>